  "bugs": {
    "url": "https://github.com/TobySuch/Shifter/issues"
  },
  "homepage": "https://github.com/TobySuch/Shifter#readme",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "filepond": "^4.32.8",
    "filepond-plugin-file-validate-size": "^2.2.8",
    "flowbite": "^3.1.2",
